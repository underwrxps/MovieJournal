<resources>
    <!-- Modern Rounded Button Style with Cyan Accent -->
    <style name="RoundedButton">
        <item name="android:backgroundTint">#00BCD4</item>  <!-- Cyan -->
        <item name="android:textColor">#121212</item>  <!-- Dark text for contrast -->
        <item name="android:elevation">6dp</item>  <!-- Slightly more elevation -->
        <item name="android:padding">12dp</item>
        <item name="shapeAppearanceOverlay">@style/RoundedShape</item>
    </style>

    <style name="RoundedShape">
        <item name="cornerSize">30dp</item>
    </style>
</resources>